{
"name": "mailwatch/mailwatch",
    "description": "MailWatch is a web-based front-end to MailScanner",
    "homepage": "http://mailwatch.org/",
    "license": "GPL-2.0",
    "type": "project",
    "support": {
      "issues": "https://github.com/mailwatch/MailWatch/issues"
    },
    "require": {
        "php": ">=5.6",
        "ext-iconv": "*",
        "sensio/framework-extra-bundle": "^5.1",
        "symfony/console": "^3.4",
        "symfony/expression-language": "^3.4",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^3.4",
        "symfony/lts": "^3",
        "symfony/maker-bundle": "^1.0",
        "symfony/orm-pack": "^1.0",
        "symfony/security-bundle": "^3.4",
        "symfony/templating": "^3.4",
        "symfony/web-server-bundle": "^3.4",
        "symfony/yaml": "^3.4",
        "ext-xml": "*",
        "neitanod/forceutf8": "~2.0",
        "ezyang/htmlpurifier": "^4.9",
        "wikimedia/ip-set": "^1.1",
        "ircmaxell/password-compat": "^1.0",
        "indigophp/hash-compat": "^1.1",
        "pear/pear-core-minimal": "^1.10",
        "pear/mail_mime-decode": "1.5.5.2",
        "pear/net_socket": "^1.2",
        "pear/net_smtp": "^1.7",
        "pear/mail": "^1.4",
        "pear/pager": "^2.5",
        "geoip/geoip": "^1.17",
        "rmccue/requests": "^1.6"

    },
    "require-dev": {
        "symfony/dotenv": "^3.4",
        "symfony/profiler-pack": "^1.0",
        "symfony/thanks": "^1.0",
        "friendsofphp/php-cs-fixer": "^2.8"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "MailWatch\\": "src/MailWatch"
        },
        "classmap": [
            "mailscanner/lib/xmlrpc"
        ]

    },
    "autoload-dev": {
        "psr-4": {
            "MailWatch\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd",
            "doctrine:migrations:migrate": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "fix-cs": "vendor/bin/php-cs-fixer fix --verbose"
    },
    "conflict": {
        "symfony/symfony": "*",
        "ext-geoip": "*"
    },
    "extra": {
        "symfony": {
            "id": "01C2JHD69ND1QXKR9438W3S3RX",
            "allow-contrib": false
        }
    }
}
