test -x /usr/local/bin/postfix_relay.php || exit 0
/usr/bin/php -q /usr/local/bin/postfix_relay.php --refresh

test -x /usr/local/bin/mailscanner_relay.php || exit 0
/usr/bin/php -q /usr/local/bin/mailscanner_relay.php --refresh

exit 0
